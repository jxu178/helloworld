<!-- views/sets.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Collection</title>
  <link rel="stylesheet" href="/css/main.css" />
</head>

<body tabindex="-1">
  <%- include('partials/navbar', {page: '/lego/sets'}) %>

  <div class="container mx-auto">
    <div class="hero bg-base-200 rounded-lg p-6">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold">Collection</h1>
          <p class="py-6">Browse the entire collection.  Click the theme to filter by themes such as: 
            <a href="/lego/sets?theme=Technic" class="btn btn-primary btn-xs">Technic</a> 
            <a href="/lego/sets?theme=Classic Town" class="btn btn-primary btn-xs">Classic Town</a>  
            <a href="/lego/sets?theme=Supplemental" class="btn btn-primary btn-xs">Supplemental</a> 
          
          </p>
        </div>
      </div>
    </div>

    <br />
    <div class="overflow-x-auto overflow-yhidden">
        <table class="table table-zebra w-full">
    
            <tbody>
                <% set.forEach(item=> { %>
                    <tr>
                      <td >
                    
                        <div class="avatar">
                          <div class="w-32 h-32 overflow-hidden rounded-lg bg-transparent bg-no-repeat bg-cover " style="width: 150px; height: 150px;">
                            <img class="w-full h-full object-cover object-center" src="<%= item.img_url %>" alt="<%= item.name %>" />
                          </div>
                        </div>
                    
                      </td>
                        <td>
                            <%= item.name %>
                        </td>
                        <td><a href="/lego/sets?theme=<%= item.theme %>" class="btn mt-2 btn-xs">
                                <%= item.theme %>
                            </a></td>
                        <td>
                          <span class="font-bold">Year:</span><%= item.year %>
                        </td>
                        <td>
                          <span class="font-bold">Parts:</span><%= item.num_parts %>
                        </td>
                        <td><a href="/lego/sets/<%= item.set_num %>" class="btn btn-xs">Details</a></td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>
  </div>
</body>

</html>
